{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",

        "baseUrl": ".",

        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,

        "strictFunctionTypes": true,
        "strictNullChecks": true,

        "declaration": true,
        "declarationMap": false,

        "resolveJsonModule": true,

        "paths": {
            "@src/*": ["src/*"],
            "@main": ["src/main"]
        }
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"]
}
