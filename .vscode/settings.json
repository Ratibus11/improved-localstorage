{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,

        "node_modules": true,
        "package-lock.json": true,

        "build": true,
        "docs": true,
        "tests/.localstorage": true
    },
    "cSpell.words": [
        "GITHUB",
        "gulpfile",
        "localstorage",
        "localstorage's",
        "nojekyll",
        "ratibus",
        "xmlhttprequest"
    ],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "prettier.printWidth": 100,
    "codemap.ts": [
        {
            "pattern": "^/// (.*)",
            "clear": "^/// ",
            "icon": "pick"
        }
    ]
}
